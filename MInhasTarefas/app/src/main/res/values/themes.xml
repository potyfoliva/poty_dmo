<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MInhasTarefas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textViewStyle">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Theme.Candy" parent="Theme.MInhasTarefas">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/candy_prim</item>
        <item name="colorPrimaryVariant">@color/candy_prim_var</item>
        <item name="colorOnPrimary">@color/candy_on_prim</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/candy_sec</item>
        <item name="colorSecondaryVariant">@color/candy_sec_var</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/candy_background</item>
        <!--<item name="android:background">@color/candy_background</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textViewStyle">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:alertDialogStyle">@color/black</item>
    </style>

    <style name="Theme.Escuro" parent="Theme.MInhasTarefas">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/escuro_prim</item>
        <item name="colorPrimaryVariant">@color/escuro_prim_var</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/escuro_sec_var</item>
        <item name="colorOnSecondary">@color/escuro_on_sec</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/escuro_background</item>
        <!--<item name="android:background">@color/escuro_background</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textViewStyle">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>